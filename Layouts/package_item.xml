<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#40ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="package name"
        android:id="@+id/packageName"
        android:typeface="monospace"
        android:textColor="#fff"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:textSize="17dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="carrier"
        android:id="@+id/carrierName"
        android:typeface="monospace"
        android:textColor="#fff"
        android:layout_below="@+id/packageName"
        android:layout_alignLeft="@+id/packageName"
        android:layout_alignStart="@+id/packageName"
        android:layout_marginLeft="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="STATUS"
        android:id="@+id/statusName"
        android:layout_alignBottom="@+id/carrierName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"
        android:typeface="monospace"
        android:textSize="17dp"
        android:textColor="#fff"
        android:layout_marginBottom="5dp" />
</RelativeLayout>